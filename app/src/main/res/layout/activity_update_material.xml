<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity.UpdateMaterialActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_new_material"
        android:id="@+id/update_material_textview"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:textSize="28sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:id="@+id/update_materialname_textview"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/update_material_textview"
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/update_materialname_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_material_textview"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/update_materialname_textview"
        android:autofillHints=""
        android:background="@drawable/input_design"
        android:hint="eg. Plastic"
        android:inputType="text"
        android:padding="20dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:id="@+id/update_description_textview"
        android:layout_marginStart="15dp"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/update_pointPerKg_textview"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/update_description_input"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@+id/update_pointPerKg_input"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/update_description_textview"
        android:background="@drawable/input_design"
        android:hint="eg. A substance made of petroleum."
        android:inputType="textAutoCorrect"
        android:textAlignment="center"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/points_per_kg"
        android:id="@+id/update_pointPerKg_textview"
        android:layout_marginStart="15dp"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/update_materialname_textview"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/update_pointPerKg_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_materialname_input"
        android:layout_marginTop="29dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/update_pointPerKg_textview"
        android:hint="100"
        android:background="@drawable/input_design"
        android:textAlignment="center"
        android:textSize="22dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addButton"
        android:layout_below="@id/update_description_input"
        android:id="@+id/update_material_save_button"
        android:layout_toEndOf="@+id/update_material_back_button"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:onClick="UpdateMaterial"
        android:background="@drawable/transparentbackground"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_below="@id/update_description_input"
        android:id="@+id/update_material_back_button"
        android:layout_marginStart="80dp"
        android:layout_marginTop="50dp"
        android:onClick="BackButton"
        android:background="@drawable/transparentbackground"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>