<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneralActivity.ForgotPasswordActivity">

    <ImageView
        android:id="@+id/forget_password_AppLogo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/recycle"/>

    <TextView
        android:id="@+id/forgot_password_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_below="@+id/forget_password_AppLogo"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="8dp"
        android:text="Please Enter Your Email To Obtain New Password"
        />

    <EditText
        android:id="@+id/forgot_password_email_input"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/forgot_password_email_text"
        android:background="@drawable/input_design"
        android:hint="Ecoverse@gmail.com"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/forgot_password_email_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/forgot_password_email_input"
        android:onClick="SendPassword"
        android:background="@drawable/transparentbackground"
        android:text="Send My Password"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        />
    <Button
        android:id="@+id/forgot_password_email_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/forgot_password_email_confirm_btn"
        android:onClick="Cancel"
        android:background="@drawable/transparentbackground"
        android:text="Cancel"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/admin_login_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/forgot_password_email_cancel_btn"
        android:background="@drawable/transparentbackground"
        android:text="Admin"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true" />


</RelativeLayout>