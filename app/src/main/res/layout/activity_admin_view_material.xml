<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity.AdminViewMaterialActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/admin_material_textview"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="24sp"
        android:text="Materials"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="15dp"
        android:id="@+id/admin_material_list"
        android:layout_below="@+id/admin_material_textview"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_material_list"
        android:id="@+id/admin_add_material_button"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Add"
        android:background="@drawable/transparentbackground"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_material_list"
        android:id="@+id/admin_update_material_button"
        android:layout_toRightOf="@id/admin_add_material_button"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:text="Update"
        android:background="@drawable/transparentbackground"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_material_list"
        android:id="@+id/admin_delete_material_button"
        android:layout_toRightOf="@id/admin_update_material_button"
        android:layout_marginTop="20dp"
        android:text="Delete"
        android:background="@drawable/transparentbackground"
        android:onClick="DeleteButton"/>

</RelativeLayout>