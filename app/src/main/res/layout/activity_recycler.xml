<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclerActivity.RecyclerActivity">

    <ImageView
        android:id="@+id/recycler_AppLogo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/recycle"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/recycler_AppLogo"
        android:id="@+id/recycler_textview"
        android:textColor="@color/colorBlack"
        android:text="Recycler Main Page"
        android:textSize="28dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="Profile"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/transparentbackground"
        android:id="@+id/recycler_profile_button"
        android:layout_below="@id/recycler_textview" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="View Material"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/transparentbackground"
        android:id="@+id/recycler_view_material_button"
        android:layout_below="@id/recycler_profile_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="View Submission"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/transparentbackground"
        android:id="@+id/recycler_view_submission_button"
        android:layout_below="@id/recycler_view_material_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Redemption"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/transparentbackground"
        android:id="@+id/recycler_redemption_button"
        android:layout_below="@id/recycler_view_submission_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:text="Logout"
        android:background="@drawable/transparentbackground"
        android:id="@+id/recycler_logout_button"
        android:layout_below="@id/recycler_redemption_button"/>

</RelativeLayout>