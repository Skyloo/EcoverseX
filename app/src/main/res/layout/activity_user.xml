<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneralActivity.UserActivity">

    <ImageView
        android:id="@+id/user_AppLogo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/recycle"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/user_AppLogo"
        android:id="@+id/user_textview"
        android:textColor="@color/colorBlack"
        android:text="User Main Page"
        android:textSize="28dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="Profile"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/transparentbackground"
        android:id="@+id/user_profile_button"
        android:layout_below="@id/user_textview" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Recycler"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/transparentbackground"
        android:id="@+id/recycler_button"
        android:layout_below="@id/user_profile_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Collector"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/transparentbackground"
        android:id="@+id/collector_button"
        android:layout_below="@id/recycler_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:text="Logout"
        android:background="@drawable/transparentbackground"
        android:id="@+id/user_logout_button"
        android:layout_below="@id/collector_button"/>

</RelativeLayout>